
 {% if app.user.canShowClock() %}
    <div class="navigation-task-container text-black-50">
        <div>
            <span> {{ app.user.clock.getTaskName() }} </span>
            <span> - </span>
            <span> {{ app.user.clock.getPeriodType() }} </span>
            <span> - </span>
            <span> {{ app.user.clock.task.getPomodorosAmmount() }}/{{ app.user.clock.task.getStimatedPomodoros() }} </span>
