{% extends "base.html.twig" %}

{% block body %}
    <div class="container login-form-container d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="position-relative col-md-12 shadow p-3 mb-5 bg-white border-top login-box">
                <h2 class="text-center text-danger font-weight-light"> Iniciar sesión </h2>
                {% if error %}
                    <div class="text-danger position-absolute text-center login-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}"
                      method="POST"
                      class="login-form position-relative"
                      data-parsley-focus="first"
                      data-parsley-validate="">
                    <div class="col-md-9 mx-auto position-relative">
                        <div class="form-group mb-4 position-relative">
                            <label for="email" class="font-weight-light">Email</label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="_username"
                                   value="{{ last_username }}"
                                   required
                                   autocomplete="on"
                                   autofocus
                                   data-parsley-trigger="focusout"
                                   data-parsley-group="block1">
                        </div>
                        <div class="form-group position-relative">
                            <label for="password" class="font-weight-light">Contraseña</label>
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="_password"
                                   required
                                   autocomplete="password"
                                   data-parsley-trigger="focusout"
                                   data-parsley-group="block1">
                        </div>

                        <button type="submit" class="btn btn-primary btn-block login-submit-btn">INGRESAR</button>
                    </div>
                    <div class="text-center mt-4 text-secondary font-weight-light login-forgot-password-text">Si olvidó su contraseña, haga
                        <a href="#"
                           class="text-dark"><u>click aquí</u></a>
                        para recuperarla.
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

